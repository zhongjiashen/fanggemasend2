<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">

    <com.fanggemasend.viewbar.TitleBar
        android:id="@+id/titler"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_style"
            android:text="下一步"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titler"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:text="本人手持身份证正面照"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:text="示例图"
                    android:textColor="#2790EB"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/sfzzm_image"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/image_bg"
                    android:src="@mipmap/scsfzz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sfzzm_image"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_toRightOf="@id/sfzzm_image"
                    android:text="1.需清晰展示五官和文字信息\n2.不可自拍、不可只拍身份证"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/sfzzmsc_bt"
                    android:layout_width="110dp"
                    android:layout_height="38dp"
                    android:layout_alignBottom="@id/sfzzm_image"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/sfzzm_image"
                    android:background="@drawable/button_style"
                    android:text="确认上传"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp" />

                <View
                    style="@style/PersonalLine"
                    android:layout_below="@id/sfzzm_image"
                    android:layout_marginTop="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:text="本人手持身份证反面照"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:text="示例图"
                    android:textColor="#2790EB"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/sfz_image"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/image_bg"
                    android:src="@mipmap/scsfzz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sfz_image"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_toRightOf="@id/sfz_image"
                    android:text="1.需清晰展示五官和文字信息\n2.不可自拍、不可只拍身份证"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/sfzsc_bt"
                    android:layout_width="110dp"
                    android:layout_height="38dp"
                    android:layout_alignBottom="@id/sfz_image"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/sfz_image"
                    android:background="@drawable/button_style"
                    android:text="确认上传"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp" />

                <View
                    style="@style/PersonalLine"
                    android:layout_below="@id/sfz_image"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/sfz_image"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="21dp"
                    android:gravity="center"
                    android:text="姓名"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/sfz_image"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="21dp"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入真实姓名"
                    android:textSize="14sp" />

                <View
                    style="@style/PersonalLine"
                    android:layout_below="@id/name_et" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/name_et"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="身份证号"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/sfzh_et"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/name_et"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="1dp"
                    android:background="@null"
                    android:digits="0123456789xX"
                    android:gravity="center"
                    android:hint="请输入身份证号"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>