<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">
    <com.fanggemasend.viewbar.TitleBar
        android:id="@+id/titler"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="手机号"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center|right"
            android:textSize="14sp" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="开户人姓名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center|right"
            android:textSize="14sp" />

        <View
            style="@style/PersonalLine"
            android:layout_below="@id/name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/name_text"
            android:layout_marginLeft="16dp"
            android:text="银行卡号"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yhkh_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/name_text"
            android:layout_marginRight="16dp"
            android:gravity="center|right"
            android:textSize="14sp" />

        <View
            style="@style/PersonalLine"
            android:layout_below="@id/yhkh_text" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yhkh_text">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:gravity="center|left"
                android:text="开户行"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center|right"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            style="@style/PersonalLine"
            android:layout_below="@id/yhkh_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#ffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="支付宝姓名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/zfbname_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center|right"
            android:textSize="14sp" />

        <View
            style="@style/PersonalLine"
            android:layout_below="@id/zfbname_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/zfbname_text"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="支付宝账号"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/zfbzh_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/zfbname_text"
            android:layout_marginRight="16dp"
            android:gravity="center|right"
            android:textSize="14sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/quit_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_style_yellow"
        android:text="退出当前账号"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />
</LinearLayout>